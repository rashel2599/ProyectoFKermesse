@model ProyectoFinalKermesse.Models.ArqueoCajaDet

@{
    ViewBag.Title = "Agregar Detalle de Arqueo de Caja";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>

    <ol class="breadcrumb" style="background:none; font-size: 18px">
        <li><a href="#">  @Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @style = "color: #779FA1" })  </a></li>
        <li><a href="#">  @Html.ActionLink("Gestiones", "Index", "Gestion", new { area = "" }, new { @style = "color: #779FA1" })  </a></li>
        <li><a href="#">@Html.ActionLink("Detalle de Arqueo de Caja", "Index", "ArqueoCajaDets", new { area = "" }, new { @style = "color: #779FA1" }) </a></li>
        <li class="active"> Agregar  </li>
    </ol>
</div>

<div class="container">
    <h2>Agregar</h2>
    <h3>Detalle de Arqueo de Caja</h3>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.arqueoCaja, "Arqueo de Caja", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("arqueoCaja", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.arqueoCaja, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.moneda, "Moneda", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("moneda", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.moneda, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.denominacion, "Denominacion", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("denominacion", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.denominacion, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.cantidad, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.cantidad, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.cantidad, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.subtotal, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.subtotal, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.subtotal, "", new { @class = "text-danger" })
        </div>
    </div>

    <button class="btn-primary" style="background-color: #779FA1">
        <span class="glyphicon glyphicon-hand-left" aria-hidden="true" style="float: left; color: #FFFFFF"></span>
        @Html.ActionLink("Regresar", "Index", "ArqueoCajaDets", new { @style = "color:white;" })
    </button>

    <button type="submit" class="btn-primary" style="background-color: #779FA1">
        <span class="glyphicon glyphicon-plus" aria-hidden="true" style="float: left; color: #FFFFFF"></span>
        Agregar
    </button>
</div>
    }

  

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

</div> 