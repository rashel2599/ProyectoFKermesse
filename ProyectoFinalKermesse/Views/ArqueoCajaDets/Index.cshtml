@model IEnumerable<ProyectoFinalKermesse.Models.ArqueoCajaDet>

@{
    ViewBag.Title = "Detalle de Arqueo de Caja";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>

    <ol class="breadcrumb" style="background:none; font-size: 18px">
        <li><a href="#">  @Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @style = "color: #779FA1" })  </a></li>
        <li><a href="#">  @Html.ActionLink("Gestiones", "Index", "Gestion", new { area = "" }, new { @style = "color: #779FA1" })  </a></li>
        <li class="active"><a href="#">  @Html.ActionLink("Detalle de Arqueo de Caja", "Index", "ArqueoCajaDets", new { area = "" }, new { @style = "color: #779FA1" })  </a></li>

    </ol>
</div>

<div class="carousel-inner" role="listbox">
    <div class="item active">
        <img src="~/fonts/BannersKermesse/26.png" alt="Banner 6">

    </div>

</div>



<div class="container">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.subtotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArqueoCaja1.idArqueoCaja)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Denominacion1.valorLetras)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Moneda1.nombre)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.cantidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.subtotal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArqueoCaja1.idArqueoCaja)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Denominacion1.valorLetras)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Moneda1.nombre)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.idArqueoCajaDet }, new { @style = "color: #779FA1" }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.idArqueoCajaDet }, new { @style = "color: #779FA1" }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.idArqueoCajaDet }, new { @style = "color: #779FA1" })
                </td>
            </tr>
        }

    </table>

    <hr />

    <p>
        <button type="button" class="btn-lg" style="border-block-color: #779FA1; background-color: #779FA1">
            @Html.ActionLink("Agregar nuevo", "Create", "ArqueoCajaDets", new { @style = "color:white;" })
            <span class="glyphicon glyphicon-plus" aria-hidden="true" style="float: left;  color: white"></span>
        </button>
    </p>

</div> 
