@model IEnumerable<ProyectoFinalKermesse.Models.Comunidad>

@{
    ViewBag.Title = "Comunidad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>

    <ol class="breadcrumb" style="background:none; font-size: 18px">
        <li><a href="#">  @Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @style = "color: #779FA1" })  </a></li>
        <li><a href="#">  @Html.ActionLink("Gestiones", "Index", "Gestion", new { area = "" }, new { @style = "color: #779FA1" })  </a></li>
        <li class="active"><a href="#">  @Html.ActionLink("Comunidad", "Index", "Comunidads", new { area = "" }, new { @style = "color: #779FA1" })  </a></li>

    </ol>
</div>

<div class="carousel-inner" role="listbox">
    <div class="item active">
        <img src="~/fonts/BannersKermesse/22.png" alt="Banner 6">

    </div>

</div>

<div class="container">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.responsble)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descContribucion)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.estado)
                </th>*@
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.responsble)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.descContribucion)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.estado)
                    </td>*@


                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.idComunidad }, new { @style = "color: #779FA1" })
                    @Html.ActionLink("Detalles", "Details", new { id = item.idComunidad }, new { @style = "color: #779FA1" })
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.idComunidad }, new { @style = "color: #779FA1" })
                </td>
            </tr>
        }

    </table>

    <p>
        <button type="button" class="btn-lg" style="border-block-color: #779FA1; background-color: #779FA1">
            @Html.ActionLink("Agregar nuevo", "Create", "Comunidads", new { @style = "color:white;" })
            <span class="glyphicon glyphicon-plus" aria-hidden="true" style="float: left;  color: white"></span>
        </button>
    </p>

</div> 
