@model IEnumerable<ProyectoFinalKermesse.Models.Gasto>

@{
    ViewBag.Title = "Gastos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>

    <ol class="breadcrumb" style="background:none; font-size: 18px">
        <li><a href="#">  @Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @style = "color: #779FA1" })  </a></li>
        <li><a href="#">  @Html.ActionLink("Gestiones", "Index", "Gestion", new { area = "" }, new { @style = "color: #779FA1" })  </a></li>
        <li class="active"><a href="#">  @Html.ActionLink("Gastos", "Index", "Gastoes", new { area = "" }, new { @style = "color: #779FA1" })  </a></li>

    </ol>
</div>

<div class="carousel-inner" role="listbox">
    <div class="item active">
        <img src="~/fonts/BannersKermesse/21.png" alt="Banner 6">

    </div>

</div>

<div class="container">
    <hr />
    @using (Html.BeginForm())
    {
        <div class="container">
            <p>
                Buscar por nombre: @Html.TextBox("valorBusq")
                <input type="submit" value="Buscar" style="background-color: #779FA1; color: #FFFFFF; font-weight:bold" />
            </p>
        </div>

    }

    <div class="dropdown" style=" left: 1000px">
        <button class="btn btn-default dropdown-toggle" style="background-color: #779FA1; color: #FFFFFF; font-weight:bold" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            <span class="glyphicon glyphicon-download-alt" aria-hidden="true" style="float: left;  color: white"></span>
            &nbsp;
            Exportar a
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
            <li><a href="#">@Html.ActionLink("Exportar a PDF", "VerReporteGasto", new { tipo = "PDF", valorBusq = Request.Form["ValorBusq"] })</a></li>
            <li><a href="#">@Html.ActionLink("Exportar a Excel", "VerReporteGasto", new { tipo = "Excel", valorBusq = Request.Form["ValorBusq"] })</a></li>
            <li><a href="#">@Html.ActionLink("Exportar a Word", "VerReporteGasto", new { tipo = "Word", valorBusq = Request.Form["ValorBusq"] })</a></li>

        </ul>
    </div>
    <hr />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.fechGasto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.concepto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.monto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fechaCreacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fechaModificacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fechaEliminacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoriaGasto.nombreCategoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kermesse1.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.usuarioCreacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.usuarioEliminacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.usuarioModificacion)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.fechGasto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.concepto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.monto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fechaCreacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fechaModificacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fechaEliminacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoriaGasto.nombreCategoria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kermesse1.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario.userName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario1.userName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario2.userName)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.idGasto }, new { @style = "color: #779FA1" })

                    @Html.ActionLink("Detalles", "Details", new { id = item.idGasto }, new { @style = "color: #779FA1" })

                    @Html.ActionLink("Eliminar", "Delete", new { id = item.idGasto }, new { @style = "color: #779FA1" })

                    @Html.ActionLink("Ver Reporte", "VerReporteGastoDetalle", new { id = item.idGasto }, new { @style = "color: #779FA1" })
                </td>
            </tr>
        }

    </table>

    <hr />

    <p>
        <button type="button" class="btn-lg" style="border-block-color: #779FA1; background-color: #779FA1">
            @Html.ActionLink("Agregar nuevo", "Create", "Gastoes", new { @style = "color:white;" })
            <span class="glyphicon glyphicon-plus" aria-hidden="true" style="float: left;  color: white"></span>
        </button>
    </p>

</div> 
